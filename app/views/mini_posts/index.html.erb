<p id="notice"><%= notice %></p>

<h1>Listing Mini Posts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mini_posts.each do |mini_post| %>
      <tr>
        <td><%= mini_post.content %></td>
        <td><%= mini_post.user_id %></td>
        <td><%= link_to 'Show', mini_post %></td>
        <td><%= link_to 'Edit', edit_mini_post_path(mini_post) %></td>
        <td><%= link_to 'Destroy', mini_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mini post', new_mini_post_path %>
